@model List<JobTask.Models.CA>

@{
    ViewData["Title"] = "View Chart of Accounts";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">View Chart of Accounts</h2>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Number</th>
                <th>Description</th>
                <th>Account Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Number</td>
                    <td>@item.Description</td>
                    <td>@item.AccountType</td>
                </tr>
            }
        </tbody>
    </table>
</div>
